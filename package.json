{
  "private": true,
  "name": "impatient-care",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "yarn workspace client",
    "server": "yarn workspace server",
    "client:dev": "yarn workspace client dev",
    "client:start": "yarn workspace client build && yarn workspace client start",
